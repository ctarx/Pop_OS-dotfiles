# The syntax is "key = value". The whitespace around the
# equals doesn't matter.

# Comments start with a `#` and are only valid on their own line.
# Blank lines are ignored!

# Empty values reset the configuration to the default value

theme = GruvboxDarkHard

# Font configuration
font-family = JetBrainsMono Nerd Font Mono
font-size = 14
adjust-cell-height=7%

# Window settings
window-padding-x = 14
window-padding-y = 14
window-decoration = false
background-opacity = 0.98
background-blur = true
background = #282828
foreground = #ebdbb2

# Window behavior
confirm-close-surface=false
resize-overlay = never
mouse-hide-while-typing

# Cursor styling
cursor-style = block
cursor-style-blink = true
cursor-color = #cc241d
cursor-text = #282828
shell-integration-features = no-cursor

# Terminal settings
term = xterm-256color

# Keybinds
keybind = ctrl+shift+r=reload_config
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+l=resize_split:right,10
